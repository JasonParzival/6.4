{% extends "__layout.twig" %}

{% block content %}

    <h1>Поиск</h1>

    <form action="" class="container mt-4">
        <div class="row g-3">
            <div class="col">
                <label>Тип</label>
                <select name="type" class="form-select">
                    <option value="">Все</option>
                    {% for type in types %}
                        <option value="{{ type.name }}"
                        {% if (recent_info.type is defined) and (recent_info.type == type.name) %}selected{% endif %}
                        >{{ type.name }}</option>
                    {% endfor %}
                </select>
            </div>
            
            <div class="col">
                <label>Название</label>
                <input class="form-control" type="text" name="title" value="{{ recent_info.title is defined ? recent_info.title : '' }}">
            </div>
            
            <div class="col">
                <label>Описание</label>
                <input class="form-control" type="text" name="info" value="{{ recent_info.info is defined ? recent_info.info : '' }}">
            </div>
            
            <div class="col-md-1">
                <br>
                <button type="submit" class="btn btn-primary w-100">Найти</button>
            </div>
        </div>
    </form>

    <div style="margin-top: 15px;">
        <ul class="list-group">
            {% for object in title_objects %}
                <li class="list-group-item">
                    <a href="portal-character/{{ object.id }}">{{object.title}}</a> <br>
                </li>   
            {% endfor %}
        </ul>
    </div>

{% endblock %}